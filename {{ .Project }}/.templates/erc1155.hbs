pragma solidity {{solcVersion}};

import { ERC1155 } from "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";

/// @title {{contractName}}
/// @notice A basic ERC1155 multi-token contract.
/// @dev This token has no pausable functionality and provides basic minting capabilities for multiple token types.
contract {{contractName}} is ERC1155 {
    /// @notice Creates the {{contractName}} multi-token contract.
    /// @dev Initializes the ERC1155 token with the given URI for metadata.
    constructor() ERC1155("{{baseURI}}") { }

    /// @notice Mints a single token type to the specified address.
    /// @dev Mints `_amount` tokens of type `_id` to `_to`.
    /// @param _to The address that will receive the minted tokens.
    /// @param _id The token type ID to mint.
    /// @param _amount The amount of tokens to mint.
    /// @param _data Additional data to pass to the receiver hook, if any.
    function mint(
        address _to,
        uint256 _id,
        uint256 _amount,
        bytes memory _data
    ) public {
        _mint(_to, _id, _amount, _data);
    }

    /// @notice Mints multiple token types to the specified address in a single transaction.
    /// @dev Mints multiple token types with their respective amounts to `_to`.
    /// @param _to The address that will receive the minted tokens.
    /// @param _ids Array of token type IDs to mint.
    /// @param _amounts Array of amounts to mint for each token type.
    /// @param _data Additional data to pass to the receiver hook, if any.
    function mintBatch(
        address _to,
        uint256[] memory _ids,
        uint256[] memory _amounts,
        bytes memory _data
    ) public {
        _mintBatch(_to, _ids, _amounts, _data);
    }
}
